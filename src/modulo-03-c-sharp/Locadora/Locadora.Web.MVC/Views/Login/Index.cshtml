@model Locadora.Web.MVC.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true);
    <div class="text-center">
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Senha)
            @Html.PasswordFor(m => m.Senha)
            @Html.ValidationMessageFor(m => m.Senha)
        </div>

        <button onclick="location.href='Login/Index'">Login</button>
    </div>
}
<div class="text-center">
    @Html.ValidationMessage("ERRO_LOGIN")
</div>