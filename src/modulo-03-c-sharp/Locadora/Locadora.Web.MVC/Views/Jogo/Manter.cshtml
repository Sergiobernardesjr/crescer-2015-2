@model Locadora.Web.MVC.Models.ManterJogoModel
@{
    ViewBag.Title = "Manter";
}

<h2>Manter</h2>

@using (Html.BeginForm("Salvar", "Jogo", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true);
    @Html.HiddenFor(m => m.Id);

    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome)
        @Html.ValidationMessageFor(m => m.Nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Descricao)
        @Html.TextBoxFor(m => m.Descricao)
        @Html.ValidationMessageFor(m => m.Descricao)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Categoria)
        @Html.EnumDropDownListFor(m => m.Categoria)
        @Html.ValidationMessageFor(m => m.Categoria)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Selo)
        @Html.EnumDropDownListFor(m => m.Selo)
        @Html.ValidationMessageFor(m => m.Selo)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Video)
        @Html.TextBoxFor(m => m.Video)
        @Html.ValidationMessageFor(m => m.Video)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Imagem)
        @Html.TextBoxFor(m => m.Imagem)
        @Html.ValidationMessageFor(m => m.Imagem)
    </div>

    <input type="submit" name="enviar" value="Salvar" class="btn" />
}
