@{
    ViewBag.Title = "Página Inicial";
}

<h2>Locadora CWI Crescer</h2>

<form id="nomePesquisa" action="@Url.Action("JogosDisponiveis", "Relatorio")" method="post">
    <input type="text" placeholder="Nome do jogo para pesquisa: " name="nome" />
    <input type="submit" value="Pesquisar" />
</form>
<div>
    <button onclick="location.href='Jogo/Manter'" name="btnCadastrarJogo">Cadastrar jogo</button>
</div>

<div>
    <button onclick="location.href='@Url.Action("Sair","Login")'" name="btnSair">Sair</button>
    <button onclick="location.href='@Url.Action("JogosDisponiveis", "Relatorio")'" name="btnRelatorio">Jogos disponíveis</button>
</div>

<img src="~/Content/Image/Locadora.jpg" />
